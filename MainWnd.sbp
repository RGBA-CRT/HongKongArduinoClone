		DisconnectDevice()
		ExitSub
	End If
	SloveCartInfo(buf,VarPtr(cartInfo))
	SetCartInfo(VarPtr(cartInfo))

	'アクセスランプをLow
	SetAddress(hCOM,&H000000,FALSE)
End Sub